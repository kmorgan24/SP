<UserControl x:Class="ShopManager.TechAssignedWorkDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopManager"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="380">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        
        <Label Name="TechNameLabel" Content="Tech Name" HorizontalAlignment="Center"/>
        <StackPanel Name="AssignedWorkPanel" Grid.Row="1" Orientation="Vertical"/>
        
    </Grid>
</UserControl>
