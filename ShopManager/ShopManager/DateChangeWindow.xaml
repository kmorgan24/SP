<Window x:Class="ShopManager.DateChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopManager"
        mc:Ignorable="d"
        Title="DateChangeWindow" Height="300" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Label Content="Date" Name="DateLabel" HorizontalAlignment="Center"/>
        <Label Content="Hours" Name="HoursLabel" HorizontalAlignment="Center" Grid.Row="1"/>
        <ScrollViewer Grid.Row="2">
            <StackPanel Name="DayStack" Orientation="Horizontal"/>
        </ScrollViewer>

    </Grid>
</Window>
