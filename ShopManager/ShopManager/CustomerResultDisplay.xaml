<UserControl x:Class="ShopManager.CustomerResultDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopManager"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Name="CustomerName" Content="" Grid.Row="0"/>
        <Label Name="CompanyName" Content="" Grid.Row="1"/>
        <Button Name="Selectbtn" Content="Select" Grid.Row="2" Click="Selectbtn_Click"/>

    </Grid>
</UserControl>
